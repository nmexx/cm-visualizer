{
  "name": "mtg-dashboard",
  "version": "1.0.0",
  "description": "MTG Cardmarket Sales Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ."
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^10.0.1",
    "cross-env": "^10.1.0",
    "electron": "^29.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^10.0.2",
    "jest": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "build": {
    "appId": "com.mtg.dashboard",
    "productName": "MTG Dashboard",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json",
      "lib/**"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
